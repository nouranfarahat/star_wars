<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.example.star_wars.characters.view.CharactersFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/starshipsFragment"
        android:name="com.example.star_wars.starships.view.StarshipsFragment"
        android:label="fragment_starships"
        tools:layout="@layout/fragment_starships" />
    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.example.star_wars.characters.view.CharacterDetailsFragment"
        android:label="fragment_character_details"
        tools:layout="@layout/fragment_character_details" >
        <argument
            android:name="character_details"
            app:argType="com.example.star_wars.model.Character" />
    </fragment>
</navigation>